<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/donutImageButton"
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:contentDescription="@string/order_donuts"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/coffeeImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.753"
        app:srcCompat="@drawable/donutPicture"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/coffeeImageButton"
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:contentDescription="@string/order_coffees"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47"
        app:srcCompat="@drawable/coffeePicture"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/basketViewImageButton"
        android:layout_width="132dp"
        android:layout_height="139dp"
        android:contentDescription="@string/your_cart"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/storeOrdersImageButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787"
        app:srcCompat="@drawable/basketPicture"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/storeOrdersImageButton"
        android:layout_width="141dp"
        android:layout_height="138dp"
        android:contentDescription="@string/store_orders"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785"
        app:srcCompat="@drawable/checkPicture"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>